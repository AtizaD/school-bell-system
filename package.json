{
  "name": "school-bell-system",
  "version": "1.0.1",
  "description": "Automated school bell scheduling system with audio playback and authentication",
  "main": "src/main/main.js",
  "homepage": "https://github.com/AtizaD/school-bell-system",
  "author": {
    "name": "AtizaD",
    "email": "veratechgh1@gmail.com",
    "url": "https://github.com/AtizaD"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtizaD/school-bell-system.git"
  },
  "bugs": {
    "url": "https://github.com/AtizaD/school-bell-system/issues"
  },
  "keywords": [
    "school",
    "bell",
    "scheduler",
    "electron",
    "audio",
    "automation",
    "education",
    "desktop-app"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --disable-gpu-sandbox --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish=always",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor", 
    "release:major": "node scripts/release.js major",
    "clean": "rimraf dist node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "bcryptjs": "^3.0.2",
    "electron-updater": "^6.1.7",
    "node-cron": "^4.1.1",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.atizad.school-bell-system",
    "productName": "School Bell System",
    "copyright": "Copyright Â© 2025 AtizaD",
    "electronVersion": "37.1.0",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "audio",
        "to": "audio",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/tray-icon.png",
        "to": "tray-icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "School Bell System"
    },
    "publish": {
      "provider": "github",
      "owner": "AtizaD",
      "repo": "school-bell-system",
      "private": false,
      "releaseType": "release"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}