{
  "name": "school-bell-system",
  "version": "1.0.0",
  "description": "Automated school bell scheduling system with audio playback and authentication",
  "main": "src/main/main.js",
  "homepage": "https://github.com/AtizaD/school-bell-system",
  "author": {
    "name": "AtizaD",
    "email": "veratechgh1@gmail.com",
    "url": "https://github.com/AtizaD"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtizaD/school-bell-system.git"
  },
  "bugs": {
    "url": "https://github.com/AtizaD/school-bell-system/issues"
  },
  "keywords": [
    "school",
    "bell",
    "scheduler",
    "electron",
    "audio",
    "automation",
    "education",
    "desktop-app"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --disable-gpu-sandbox --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "electron-builder --publish=always"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "electron": "^28.1.0",
    "node-cron": "^3.0.3",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.atizad.school-bell-system",
    "productName": "School Bell System",
    "copyright": "Copyright Â© 2025 AtizaD",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "audio",
        "to": "audio",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icons/icon.ico",
      "publisherName": "AtizaD",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icons/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icons/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "School Bell System",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "AtizaD",
      "repo": "school-bell-system",
      "private": false,
      "releaseType": "release"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
